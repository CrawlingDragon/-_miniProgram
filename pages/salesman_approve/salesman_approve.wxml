<!--认证中，认证失败-->
<mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
<view class="box">
  <mp-form id="form" rules="{{rules}}" models="{{formData}}">
    <mp-cells class="cells">
      <mp-cell>
        <view>用户名</view>
        <view slot="footer" class="right" class="input-value">{{userName}}</view>
      </mp-cell>
      <mp-cell link>
        <view>名字</view>
        <view slot="footer" class="right">
          <input type="text" model:value="{{name}}" class="input-value" placeholder="请输入名字" />
        </view>
      </mp-cell>
      <mp-cell link>
        <view>店铺名</view>
        <view slot="footer" class="right">
          <input type="text" model:value="{{shopName}}" class="input-value" placeholder="输入店铺名" />
        </view>
      </mp-cell>

      <mp-cell link>
        <view>所在地</view>
        <view slot="footer" class="right">
          <picker mode="region" bindchange="bindRegionChange" value="{{address}}">
            <input type="text" value="{{address}}" class="input-value" placeholder="请选择所在地" />
          </picker>
        </view>
      </mp-cell>
      <mp-cell link>
        <view>详细地址</view>
        <view slot="footer" class="right">
          <textarea name="" id="" model:value="{{detailAddress}}" class="input-value txt" auto-height="{{true}}" rows="30" cols="30" placeholder="请输入详细地址"></textarea>
        </view>
      </mp-cell>
    </mp-cells>

    <view class="upload-box">
      <view class="title">营业执照</view>
      <view class="upload-btn" bindtap="chooseImageMedia">
        <mp-loading type="circle" ext-class="img-loading" tips="上传中" show="{{show}}"></mp-loading>
      </view>
      <!-- <mp-uploader ext-class="up-btn upload-btn" bindfail="uploadError" bindsuccess="uploadSuccess" select="{{selectFile}}" upload="{{uplaodFile}}">
    </mp-uploader> -->
      <!-- <view>
      <text wx:if=" !license">图片显示错误</text>
  </view> -->
      <image class="upload-image" src="{{license}}" mode="aspectFit"></image>
    </view>
    <mp-cells>
      <mp-cell link>
        <view>请输入拒绝理由</view>
        <view slot="footer" class="right">
          <textarea style="width: 350rpx;" name="" id="" model:value="{{remark}}" class="input-value txt" auto-height="{{true}}" rows="30" cols="30" placeholder="拒绝理由"></textarea>
        </view>
      </mp-cell>
    </mp-cells>
    <view class="btn-box">
      <view class="btn" catchtap="approve" data-status="{{3}}">拒绝</view>
      <view class="btn" catchtap="approve" data-status="{{2}}">通过</view>
    </view>
  </mp-form>
</view>