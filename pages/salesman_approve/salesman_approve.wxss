/* pages/approve/approve.wxss */
.box {
  padding-bottom: 130rpx;
}
.head-title {
  min-height: 100rpx;
  display: flex;
  padding-left: 30rpx;
  font-size: 34rpx;
  font-weight: 400;
  color: #1aa93a;
  display: flex;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
}

.head-title .small-title {
  color: #666666;
  flex: 1;
}
.fail {
  width: auto;
}
.cells .weui-cells {
  margin-top: 0;
}
.cells .weui-cells view {
  font-size: 30rpx;
}
.right {
  color: #333;
}
.upload-box {
  margin-top: 20rpx;
  background: #ffffff;
  padding: 30rpx;
  position: relative;
  height: 430rpx;
}

.upload-box .title {
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
}
.upload-btn,
.upload-image {
  width: 690rpx;
  position: absolute;
  height: 310rpx;
  left: 30rpx;
  bottom: 30rpx;
  background-color: transparent;
}
.upload-btn {
  opacity: 1;
  z-index: 22;
  border: 1px solid #e5e5e5;
}

.weui-uploader__title {
  display: none;
}
.weui-uploader__input-box {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.upload-btn text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  border: 1px solid #e5e5e5;
}
.btn-box {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 120rpx;
  background: #ffffff;
  right: 0;
  display: flex;
  z-index: 222;
  align-items: center;
  justify-content: center;
}
.btn {
  width: 240rpx;
  height: 80rpx;
  background: #1aa93a;
  border-radius: 7px;
  text-align: center;
  line-height: 80rpx;
  font-size: 34rpx;
  color: #ffffff;
}
.btn:first-child {
  margin-right: 40rpx;
}
.btn.disabled {
  background: #bcbcbc;
  color: #fff;
}
.input-value {
  font-size: 30rpx;
  color: #333333;
  width: 490rpx;
}
.txt {
  height: auto;
  padding: 10rpx 0;
  overflow: auto;
  /* min-height: 60rpx; */
}
.img-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 50%;
  transform: translate(-50%, -50%);
}
