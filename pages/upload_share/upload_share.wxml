<view class="share-pic data-v-53c8b317">
  <block wx:if="{{record_list.length!=0}}">
    <scroll-view class="share-list data-v-53c8b317" scroll-y="{{true}}" scroll-x="{{false}}" refresher-enabled="{{true}}" refresher-triggered="{{refreshstatus}}" refresher-background="#EFEFF4" data-event-opts="{{[['refresherpulling',[['pullDownRefresh',['$event']]]],['scrolltolower',[['scrollToBottom',['$event']]]]]}}" bindrefresherpulling="__e" bindscrolltolower="__e">
      <block wx:for="{{record_list}}" wx:for-item="item" wx:for-index="index" wx:key="index">
        <view class="single-share data-v-53c8b317">
          <view class="item1 pic data-v-53c8b317">
            <u-image vue-id="{{'37605fc0-1-'+index}}" src="{{item.image}}" lazy-load="{{true}}" width="{{180}}" height="{{140}}" border-radius="{{10}}" data-event-opts="{{[['^click',[['watchBigPic',['$0'],[[['record_list','',index,'image']]]]]]]}}" bind:click="__e" class="data-v-53c8b317" bind:__l="__l"></u-image>
          </view>
          <view class="item1 time data-v-53c8b317">
            <view>{{item.create_time}}</view>
            <view class="checked" wx:if="{{item.is_check === 1}}">已验收</view>
          </view>

          <view data-event-opts="{{[['tap',[['deleted',['$0'],[[['record_list','',index]]]]]]]}}" class="item1 delete-btn data-v-53c8b317" bindtap="__e">删除</view>

        </view>
      </block>
      <u-loadmore data-custom-hidden="{{!(isloadshow)}}" class="load data-v-53c8b317" vue-id="37605fc0-2" margin-top="{{20}}" margin-bottom="{{20}}" status="{{status}}" data-event-opts="{{[['^loadmore',[['loadmore']]]]}}" bind:loadmore="__e" bind:__l="__l"></u-loadmore>
    </scroll-view>
  </block>
  <popup vue-id="37605fc0-3" title="{{title}}" isshow="{{isshow}}" data-event-opts="{{[['^getShowStatus',[['getShowStatus']]],['^clickItem',[['clickItem']]]]}}" bind:getShowStatus="__e" bind:clickItem="__e" class="data-v-53c8b317" bind:__l="__l"></popup>
  <block wx:if="{{record_list.length==0}}">
    <view class="no-data data-v-53c8b317">暂无数据</view>
  </block>
  <view class="add-btn-box data-v-53c8b317"><button class="add_btn data-v-53c8b317" type="primary" data-event-opts="{{[['tap',[['addRecord']]]]}}" bindtap="__e">上传分享截图</button></view>
</view>