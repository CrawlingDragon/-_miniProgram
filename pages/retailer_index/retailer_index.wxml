<view class="nonghu-index data-v-ab676c6a">
  <view class="per-info data-v-ab676c6a">
    <view class="p-left data-v-ab676c6a">
      <u-image vue-id="ac492940-1" width="100%" height="100%" shape="circle" src="{{perinfo.avatar}}" class="data-v-ab676c6a" bind:__l="__l"></u-image>
    </view>
    <view class="p-middle data-v-ab676c6a">
      <view class="item _p data-v-ab676c6a">{{''+perinfo.realname+''}}<text class="text1 data-v-ab676c6a">{{perinfo.shop_name}}</text></view>
      <view class="integral">
        <block wx:if="{{perinfo.is_shop_auth === 0}}">未认证</block>
        <block wx:if="{{perinfo.is_shop_auth === 1}}">认证中</block>
        <block wx:if="{{perinfo.is_shop_auth === 2}}">积分{{perinfo.points}}</block>
        <block wx:if="{{perinfo.is_shop_auth === 3}}">认证失败</block>
      </view>
      <view class="item data-v-ab676c6a">{{perinfo.mobile}}</view>
      <view class="item data-v-ab676c6a">{{perinfo.address[0]}}{{perinfo.detailed_address}}</view>
    </view>
    <view class="p-right data-v-ab676c6a" bindtap="modefiy">编辑<u-icon vue-id="ac492940-2" name="arrow-right" class="data-v-ab676c6a"></u-icon>
    </view>
  </view>
  <view class="function-points data-v-ab676c6a">
    <block wx:for="{{points}}" wx:for-item="item" wx:for-index="index" wx:key="index">
      <view class="single-points data-v-ab676c6a" bindtap="selPoints" data-text="{{item.text}}">
        {{item.text}}
        <view class="read-icon" wx:if="{{item.index == '6' && perinfo.is_notice === 1}}">
        </view>
      </view>
    </block>
  </view>
</view>